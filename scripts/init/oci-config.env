# OCI Configuration File
# Copy this file to oci-config.local.env and update with your values

# OCI Account Information
OCI_COMPARTMENT_ID="your-compartment-ocid-here"
OCI_REGION="us-phoenix-1"

# Instance Configuration
OCI_AVAILABILITY_DOMAIN="EoFt:PHX-AD-3"
OCI_SUBNET_ID="your-subnet-ocid-here"
OCI_SSH_KEY_PATH="/path/to/your/ssh-key.pem"

# Instance Shape Configuration
# Choose based on your region availability:
# 
# For Phoenix (us-phoenix-1) and other ARM64 regions:
OCI_SHAPE="VM.Standard.A1.Flex"  # ARM64 flexible shape
OCI_IMAGE_ID="your-arm64-image-ocid-here"  # Ubuntu 22.04 ARM64
OCI_OCPUS="1"          # OCPUs per instance (1-4, total across all instances)
OCI_MEMORY_GB="6"      # Memory per instance (6-24, total across all instances)
#
# For other regions with AMD Always Free:
# OCI_SHAPE="VM.Standard.E2.1.Micro"  # AMD fixed shape (1/8 OCPU, 1GB RAM)
# OCI_IMAGE_ID="your-amd-image-ocid-here"  # Ubuntu 22.04 AMD64
# OCI_OCPUS="1"          # Not used for fixed shapes
# OCI_MEMORY_GB="1"      # Not used for fixed shapes

OCI_BOOT_VOLUME_SIZE="50"  # GB (minimum for ARM64, can be smaller for AMD)

# Application Configuration
GITHUB_REPO="https://github.com/your-username/your-repo.git"
APP_NAME="social-media-app"
APP_PORT="3000"

# VCN Configuration (for create-vcn.sh)
VCN_CIDR_BLOCK="10.0.0.0/16"
SUBNET_CIDR_BLOCK="10.0.1.0/24"
