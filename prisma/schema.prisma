generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  posts     Post[]
  comments  Comment[]
  forests   Forest[] @relation("ForestCreator")
}

model Forest {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  creatorId   Int
  creator     User     @relation("ForestCreator", fields: [creatorId], references: [id])
  posts       Post[]
  createdAt   DateTime @default(now())
}

model Post {
  id        Int       @id @default(autoincrement())
  content   String
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  forestId  Int?
  forest    Forest?   @relation(fields: [forestId], references: [id])
  comments  Comment[]
  createdAt DateTime  @default(now())
  location  Json?     // Stores { lat: number, lon: number }
}


model Comment {
  id          Int       @id @default(autoincrement())
  content     String
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])
  postId      Int
  post        Post      @relation(fields: [postId], references: [id])
  createdAt   DateTime  @default(now())
  
  // Self-referential for nested comments
  parentId    Int?
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies     Comment[] @relation("CommentReplies")
}