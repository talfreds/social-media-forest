{
  "name": "social-media-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "db:reset": "docker compose up -d && pnpx prisma db push --force-reset && pnpx prisma generate && pnpm dev",
    "db:push": "pnpx prisma db push && pnpx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://test:test@localhost:5433/test_db} npx prisma migrate deploy && cross-env DATABASE_URL=${DATABASE_URL:-postgresql://test:test@localhost:5433/test_db} npx prisma generate",
    "type-check": "npx tsc --noEmit",
    "pre-deploy": "pnpm run format:check && pnpm run type-check && pnpm run lint && pnpm run test && pnpm run build",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^6.5.0",
    "@mui/material": "^6.5.0",
    "@prisma/client": "^6.17.1",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.22",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.1.7",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
