{
  "name": "social-media-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "db:reset": "docker compose up -d && pnpx prisma db push --force-reset && pnpx prisma generate && pnpm dev",
    "db:push": "pnpx prisma db push && pnpx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://test:test@localhost:5433/test_db} npx prisma migrate deploy && cross-env DATABASE_URL=${DATABASE_URL:-postgresql://test:test@localhost:5433/test_db} npx prisma generate",
    "type-check": "npx tsc --noEmit",
    "pre-deploy": "pnpm run format:check && pnpm run type-check && pnpm run lint && pnpm run test && pnpm run build"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.5",
    "@mui/material": "^6.4.5",
    "@prisma/client": "^6.4.1",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "prisma": "^6.4.1",
    "typescript": "^5"
  }
}
